<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="75%"
            android:pivotY="120%">
            <shape android:shape="rectangle">
                <size
                    android:width="20dp"
                    android:height="20dp" />
                <solid android:color="#ee222222" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="80%"
            android:pivotY="130%">
            <shape android:shape="rectangle">
                <size
                    android:width="20dp"
                    android:height="20dp" />
                <solid android:color="#ffffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>